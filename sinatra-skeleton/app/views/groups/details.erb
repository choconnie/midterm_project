<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <hr/>
      <h1 style="text-align: center">Post List</h1>
      <hr/>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10">
      <!-- <a href="/groups/<%= @group.id%>/post/new">
        <button type="button" class="btn btn-primary btn-sm" name="join">Add New Post</button>
      </a> -->
      <br/><br/>
      <% @posts.each do |post| %>
        <div class="post">
          <p>
            <a href="/groups/<%= post.group_id%>/posts/<%= post.id %>/details"><%= post.title %></a>
            <%= limit_to_num_of_char(post.content, 100) %>
            <br/>Created at: <%= post.created_at %>
            <br/>
          </p>
          <p>
          Tags:
          <% post.tags.each do |tag| %>
            <a href="/groups/<%=@group.id%>/posts/<%= tag.name %>"><%= tag.name %></a>
          <% end %>
          </p>
        </div>
      <% end %>

      <h2>Add a New Post</h2>
      
      <form method="POST" action="/groups/<%= @group.id %>/post/create" role="form" class="post_form">
        <input type = "text" class="form-control" name="title" placeholder="Title">
        <textarea name="content" class="form-control" placeholder="Post details go here..."></textarea>
        <input type ="text" name="tags" class="form-control" placeholder="Tags">
        <input type = "submit" class="btn" value ="Sumbit!">
      </form>
      <br/><br/><hr/>
      <a href="/groups">Back to group list</a>
    </div>
    <div class="col-sm-2 tag_list">
      <h4>Post Tags</h4>
        <% @tags.each do |tag| %>
          <p class="tag"><a href="/groups/<%=@group.id%>/posts/<%=tag%>"><%= tag%></a></p>
        <% end %>
    </div>
  </div>
</div>