<% if @user && @user.errors.any? %>
  <div class = "errors">
    <strong>There are some issues with your submission:</strong>
    <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="signin_singup_form">
