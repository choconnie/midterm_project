<div class="container" style="padding-top: 60px;">
  <h1 class="page-header">Welcome <%= @user.username %></h1>
  <div class="row">
    <!-- left column -->
    <div class="col-md-4 col-sm-6 col-xs-12">
    <form method="post" action="/profile/<%= @user.id %>">
      <div class="text-center">
        <img src="<%= @user.id %>" class="avatar img-circle img-thumbnail" alt="avatar">
        <h6>Upload a different photo...</h6>
        <div class="registration_form">
          <form method="post" action="/profile/<%= @user.id %>/upload_imgs" enctype="multipart/form-data" accept="image/jpeg">
            <input class="text-center center-block well well-sm" type="file" name="img_file" id="upload_img"> 
            <input type="submit" value="Upload Image" name="submit">
          </form>
        </div>
      </div>
    </div>

    <!-- Username -->
    <div class="col-md-8 col-sm-8 col-md-12 personal-info">
      <br><br>
      <div class="input-group add-on">
        <span class="input-group-addon" id="basic-addon1">username</span>
        <input type="text" class="form-control" name="username" value="<%= @user.username %>">
      </div>
      <br>
      <div class="input-group add-on">
        <span class="input-group-addon" id="basic-addon1">password</span>
        <input type="text" class="form-control" name="password" value="<%= @user.password %>">
      </div>
       <!-- Save and Cancel Button -->
      <div class="form-group">
        <div class="col-sm-0">
          <input class="btn btn-primary" value="Save Changes" type="submit">
          <span></span>
          <a href="/user/<%= @user.id %>/dashboard"><input class="btn btn-default" value="Cancel" type="button"></a>
        </div>
      </div>
      </form>
    </div>
  </div>
</div>


