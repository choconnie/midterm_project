<div class="container" style="padding-top: 60px;">
  <h1 class="page-header">Welcome <%= @user.username %></h1>
  <div class="row">
    <!-- Image Column -->
    <div class="col-md-4 col-sm-6 col-xs-12">
    <form method="post" action="/profile/<%= @user.id %>">
      <div class="text-center">
        <img src="http://lorempixel.com/200/200/people/4/" class="avatar img-circle img-thumbnail" alt="avatar">
        <h6>Upload a different photo...</h6>
        <input type="file" class="text-center center-block well well-sm">
      </div>
    </div>
    <!-- Username -->
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <br><br>
      <div class="input-group add-on">
        <input type="text" class="form-control" name="username" value="<%= @user.username %>">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-edit"></i></button>
        </div>
      </div>
      <br>
      <!-- Password -->
      <div class="input-group add-on">
        <input type="text" class="form-control" placeholder="password" name="password" value="<%= @user.password %>">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-edit"></i></button>
        </div>
      </div>
      <br>
      <!-- Save and Cancel Button -->
      <div class="form-group">
        <label class="col-md-0 control-label"></label>
        <div class="col-md-8">
          <input class="btn btn-primary" value="Save Changes" type="submit">
          <span></span>
          <a href="/user/<%= @user.id %>/dashboard"><input class="btn btn-default" value="Cancel" type="button"></a>
        </div>
      </div>
      </form>
    </div>
  </div>
</div>

