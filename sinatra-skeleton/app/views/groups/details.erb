

<h2>Post List</h2>

<% @posts.each do |post| %>
  <div class="post">

    <h3>
      <a href="/groups/<%= post.group_id%>/posts/<%= post.id %>/details"><%= post.title %></a>
    </h3>
  
    <p>Post id: <%= post.id %></p>
    <p>Group id: <%= post.group_id %></p>

  </div>
<% end %>

<a href="/groups">Back to group list</a>
