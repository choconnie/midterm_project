<div class="bootstrap-admin-with-small-navbar">
  <div class="container">
    <!-- left, vertical navbar & content -->
    <div class="row">
      <!-- left, vertical navbar -->
      <div class="col-md-2 bootstrap-admin-col-left">
        <ul class="nav navbar-collapse collapse bootstrap-admin-navbar-side">
          <li>
            <a href="/admin"><i class="glyphicon glyphicon-chevron-right"></i> Dashboard</a>
          </li>
          <li>
            <a href="/admin/events"><i class="glyphicon glyphicon-chevron-right"></i>Events</a><!-- calendar.html -->
          </li>
          <li class="active">
            <a href="/admin/users"><span class="badge pull-right"><%= @total_users %></span> Users</a>
          </li>
          <li>
            <a href="/admin/groups"><span class="badge pull-right"><%= @total_groups %></span> Groups</a>
          </li>
        </ul>
      </div>

      <!-- content -->
      <div class="col-md-10">
        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h1>Users</h1>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">Find Users</div>
              </div>
              <div class="bootstrap-admin-panel-content text-muted users_table">
                <% @users.each do |user| %>
                <div class = "row">
                  <div class="col-md-6">
                    <h4><%= user.username %></h4>
                  </div>
                  <div class ="col-md-6">
                    <% if user.status == true %>
                    <form method="POST" action="/admin/users/<%=user.id%>/deactivate" role="form">
                      <input type="submit" class="btn btn-danger" value="Deactivate Account">
                    </form>
                    <% else %>
                    <form method="POST" action="/admin/users/<%=user.id%>/activate" role="form">
                      <input type="submit" class="btn btn-small btn-success" value="Activate Account">
                    </form>
                    <% end %>
                  </div>   
                </div>
                <hr />
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>        
</div>